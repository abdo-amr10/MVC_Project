@using Demo.BLL.DTOs.EmployeeDTOs
@using Demo.DAL.Enums
@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Are You Sure You Want To Delete This Employee?</h1>
<br />
<br />

<!-- Bootstrap Tabs-->
<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->

    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general">

        <div class="row">
            <div class="form-group col-6 mb-3">
                @* <label class="col-form-label" for="Code">Code</label> *@
                <label class="form-label" asp-for="Name"></label>

                @* <input type="text" name="Code" id="Code" class="form-control" /> *@
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="col-form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="col-form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
            </div>
            <div class="form-group col-6 mb-3">
                <label class="col-form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label asp-for="EmployeeType" class="control-label"></label>
                <select asp-for="EmployeeType" disabled asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                    <option value="">
                        Select Employee Type
                    </option>
                </select>
            </div>
            <div class="form-group col-6">
                <label class="control-label" asp-for="Gender"></label> <br />
                @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
                {

                    <div class="form-check">
                        <input type="radio" class="form-check-input" asp-for="Gender" value="@genderOption" disabled />
                        <label class="form-check-label" asp-for="Gender">
                            @genderOption
                        </label>
                    </div>
                }

            </div>
            <div class="form-group col-6 mt-3">
                <label class="col-form-label" asp-for="HiringDate"></label>
                <input type="date" asp-for="HiringDate" class="form-control" readonly />
            </div>


            <div class="form-group col-12 my-3">
                <div class="form-check">

                    <input type="checkbox" asp-for="IsActive" disabled class="form-check-input" readonly />
                    <label class=" form-check-label" asp-for="IsActive"></label>
                </div>
            </div>

        </div>



    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration">

        <div class="row col-12">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>
        </div>

    </div>

</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form></div>
