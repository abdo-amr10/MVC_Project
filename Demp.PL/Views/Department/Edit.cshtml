@model DepartmentEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row justify-content-center align-items-center flex-column">
    <h1 class="col-6 my-4">Edit Department</h1>
    <br />
    <br />

    <form asp-action="Edit" class="row col-6">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group col-6">
            <label class="form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-12">
            <label class="form-label" asp-for="Description"></label>
            <textarea asp-for="Description" name="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group col-12 mt-3">
            <label class="form-label" asp-for="CreationDate"></label>
            <input type="date" asp-for="CreationDate" class="form-control" />
            <span asp-validation-for="CreationDate" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <input type="submit" value="Save" class="btn btn-success" /> |
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>

@section ValidationScript
        {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}