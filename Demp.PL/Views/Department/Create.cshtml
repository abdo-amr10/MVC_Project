@using Demo.BLL.DTOs.DepartmentDTOs

@model CreatedDepartmentDto

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-items-center">
    <h1 class="col-8 my-4">Create New Department</h1>
    <br />
    <br />

    <form asp-action="Create" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label class="col-form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="col-form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="col-form-label" asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label class="col-form-label" asp-for="CreationDate"></label>
            <input type ="date" asp-for="CreationDate" class="form-control" />
        </div>

        <div class="mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </div>
    </form>
</div>
