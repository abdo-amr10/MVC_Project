@model HomeViewModel
@{

    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    <h1 class="display-4 mb-4 text-primary fw-bold">Welcome to Admin Dashboard Management System</h1>
    <p class="lead mb-5 text-muted">Efficiently manage your employees and departments with ease.</p>

    <div class="row">
        <!-- Department Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 rounded-4 hover-shadow">
                <div class="card-header bg-primary text-white border-0">
                    <h5 class="card-title mb-0"><i class="fas fa-building me-2"></i>Department Overview</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Manage and View Departments</h6>
                    <p class="card-text">Easily manage all departments and the employees within them.</p>

                    <!-- Actual number of departments -->
                    <p class="fs-5 fw-bold text-primary mt-3">
                        <i class="fas fa-sitemap me-2"></i>Total Departments: @Model.TotalDepartments
                    </p>

                    <a href="@Url.Action("Index", "Department")" class="btn btn-outline-primary btn-lg shadow-sm">View Departments</a>
                </div>
            </div>
        </div>

        <!-- Employee Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-0 rounded-4 hover-shadow">
                <div class="card-header bg-success text-white border-0">
                    <h5 class="card-title mb-0"><i class="fas fa-users me-2"></i>Employee Overview</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Manage and View Employees</h6>
                    <p class="card-text">Add, update, or remove employees and their details.</p>

                    <!-- Actual number of employees -->
                    <p class="fs-5 fw-bold text-success mt-3">
                        <i class="fas fa-user-friends me-2"></i>Total Employees: @Model.TotalEmployees
                    </p>

                    <a href="@Url.Action("Index", "Employee")" class="btn btn-outline-success btn-lg shadow-sm">View Employees</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Stats Section -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card bg-info text-white shadow-lg border-0 rounded-4 hover-shadow">
                <div class="card-body text-center">
                    <h5 class="card-title"><i class="fas fa-user-tie me-2"></i>Total Employees</h5>
                    <p class="card-text display-6 fw-bold">@Model.TotalEmployees</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white shadow-lg border-0 rounded-4 hover-shadow">
                <div class="card-body text-center">
                    <h5 class="card-title"><i class="fas fa-sitemap me-2"></i>Total Departments</h5>
                    <p class="card-text display-6 fw-bold">@Model.TotalDepartments</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white shadow-lg border-0 rounded-4 hover-shadow">
                <div class="card-body text-center">
                    <h5 class="card-title"><i class="fas fa-tasks me-2"></i>Pending Tasks</h5>
                    <p class="card-text display-6 fw-bold">8</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <h3 class="mt-5 text-info">Recent Activity</h3>
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><i class="fas fa-user-plus me-2 text-primary"></i>User Hossam Saber added to the CS department</span>
            <span class="badge bg-primary-subtle text-primary fw-semibold">Today</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><i class="fas fa-plus me-2 text-success"></i>New department created: CS</span>
            <span class="badge bg-success-subtle text-success fw-semibold">Yesterday</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><i class="fas fa-user-edit me-2 text-warning"></i>Ahmed Hossam updated his profile details</span>
            <span class="badge bg-warning-subtle text-warning fw-semibold">2 days ago</span>
        </li>
    </ul>
</div>

<!-- Additional Styling -->
<style>
    .hover-shadow:hover {
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    .display-4 {
        font-size: 2.4rem;
    }

    .display-6 {
        font-size: 1.8rem;
    }

    .card-title i {
        font-size: 1.2rem;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.45em 0.7em;
    }

    .list-group-item {
        border: 1px solid #f0f0f0;
        border-radius: 10px;
        margin-bottom: 10px;
        font-size: 0.95rem;
        padding: 1rem;
    }
</style>

